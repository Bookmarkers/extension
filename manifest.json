{
  "manifest_version": 2,
  "name": "Bookmarq",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "description": "Save your bookmarks, save the world.",
  "version": "0.0.0.1",
  "background": {
    "scripts": [
      "bg.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}